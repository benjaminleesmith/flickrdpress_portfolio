<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag :defaults %>
		<%= javascript_include_tag 'fixOnMouseOut.js' %>
    <%= yield(:head) %>
  </head>
  <body>
  	<div id="header"><%=::PORTFOLIO_CONFIG['title']%></div>
		<div id="navigation">
			<ul>
				<li><a href="#" onclick="javascript:VP.show_home();return false;">Home</a></li>
				<li><a href="#" onclick="javascript:VP.show_blog();return false;">Blog</a></li>
				<li><a href="#" onclick="javascript:VP.show_contact();return false;">Contact</a></li>
			</ul>
		</div>
    <div id="container">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>

      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>

      <%= yield %>
    </div>

		<div id="footer">
			<div>
				Site built on <%=link_to('Voltron Portfolio', 'http://voltronportfolio.com')%>.
		  </div>
			<div class="disclaimer">
			  <%=link_to('Flickr', 'http://www.flickr.com/')%> Disclaimer: "This product uses the <%=link_to('Flickr API', 'http://www.flickr.com/services/api/')%> but is not endorsed or certified by <%=link_to('Flickr', 'http://www.flickr.com/')%>."
			</div>
		</div>
  </body>

	<script type="text/javascript">
		var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
		document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
	</script>
	<script type="text/javascript">
		try {
			var pageTracker = _gat._getTracker("<%=::PORTFOLIO_CONFIG['google_analytics_web_property_id']%>");
			pageTracker._trackPageview();
		} catch(err) {}
	</script>
  <!-- now running on rails 3 -->
</html>
